<h2 class="text-name">カテゴリ：<%= @category.name %></h2>
<div class = "seach">
  <%= search_form_for @q do |f| %>
    <div class="d-flex justify-content-center mb-3" style="width: 300px;">
      <%= f.search_field :title_cont, class:"form-control col-xs-4", placeholder:"タイトル入力" %>
      <%= f.submit "検索", class:"ml-2"%> 
    </div>
  <% end %>
</div>

<div class="row">
  <% @memos.each do |memo| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card" style="max-width: 20rem;">
        <div class="card-header alert-primary">
          <h4><%= memo.title %></h4>
          <p><%= memo.category.name %></p>
          <div class="buttons">
            <%= link_to memo_path(memo), method: :delete, data: {confirm: "削除しますか?"} do %>
              <div class="far fa-trash-alt"><i class="fas fa-times fa-xs"></i></div>
            <% end %>
            <%= link_to edit_memo_path(memo) do%>
              <div class="far fa-edit"><i class="fas fa-times fa-xs"></i></div>
            <% end %>
          </div>  
        </div>
        <div div class="card-body">
          <p class="card-text"><%= memo.body %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= paginate @memos %>