<%= form_with model: @memo, local: true do |f| %>
  <div class="form-group">
    <%= label_tag "form-title", "タイトル" %>
    <%= f.text_field :title, id:"form-title", class:"form-control", placeholder: "15文字以内", required: true, maxlength: 15 %>
  </div>
  <div class="form-group">
    <%= label_tag "form-content", "内容" %>
    <%= f.text_field :body, id:"form-content", class:"form-control", placeholder: "200文字以内" , required: true, maxlength: 100 %>
  </div>
  <div class="form-group">
    <%= label_tag "form-category", "カテゴリ" %>
    <%= f.collection_select :category_id, @categories, :id, :name ,{},{id:"form-category", class:"form-control"} %>   
  </div>
  <%= f.submit "記録", class:"btn btn-primary" %>
<% end %>
