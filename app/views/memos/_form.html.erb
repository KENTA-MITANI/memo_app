<%= form_with model: @memo, local: true do |f| %>
  <div class="form-group">
    <%= label_tag "form-title", "タイトル" %>
    <%= f.text_field :title, id:"form-title", class:"form-control", placeholder: "タイトル" %>
  </div>
  <div class="form-group">
    <%= label_tag "form-content", "内容" %>
    <%= f.text_field :body, id:"form-content", class:"form-control", placeholder: "内容" %>
  </div>
  <div class="form-group">
  <%= label_tag "form-category", "カテゴリ" %>
    <%= select_tag 'memo[category_id]', options_from_collection_for_select(@categories, :id, :name), id:"form-category", class:"form-control" %>
  </div>
  <%= f.submit "記録", class:"btn btn-primary" %>
<% end %>
